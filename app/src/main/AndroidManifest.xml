<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.stack">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.test.stack.StackQuestionApp"
        android:allowBackup="true"
        android:icon="@mipmap/stack_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_config"
        android:roundIcon="@mipmap/stack_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.test.stack.home.HomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.test.stack.splash.SplashActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>